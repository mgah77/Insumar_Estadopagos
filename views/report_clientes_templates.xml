<odoo>
    <template id="report_clientes">
        <t t-call="web.html_container">
        <t t-call="web.basic_layout">
            <div class="page">

                <h2>Informe de Clientes</h2>

                <t t-if="partner_display">
                    <h4 t-esc="partner_display"/>
                </t>
                <t t-else="">
                    <h4 t-esc="(partner and (partner.document_number or '')) + ' - ' + (partner and partner.name or '')"/>
                </t>

                <t t-if="date_scope == 'current_year'">
                    <p>
                        <span>Rango: Año en curso</span>
                        <t t-if="date_from and date_to"> (<span t-esc="date_from"/> — <span t-esc="date_to"/>)</t>
                    </p>
                </t>
                <t t-if="date_scope == 'last_12'">
                    <p>
                        <span>Rango: Últimos 12 meses</span>
                        <t t-if="date_from and date_to"> (<span t-esc="date_from"/> — <span t-esc="date_to"/>)</t>
                    </p>
                </t>
                <t t-if="date_scope == 'range'">
                    <p>
                        <span>Rango personalizado:</span>
                        <t t-if="date_from"><span>Desde </span><span t-esc="date_from"/></t>
                        <t t-if="date_to"><span> Hasta </span><span t-esc="date_to"/></t>
                    </p>
                </t>

                <t t-if="invoice_scope == 'pending'">
                    <p>Ámbito: Facturas pendientes</p>
                </t>
                <t t-else="">
                    <p>Ámbito: Todas las facturas</p>
                </t>

                <table class="table table-sm o_report_block" style="width:100%; border-collapse: collapse;">
                    <thead>
                        <tr>
                            <th style="text-align:left;">Factura</th>
                            <th style="text-align:left;">Fecha</th>
                            <th style="text-align:left;">Vencimiento</th>
                            <th style="text-align:right;">Total</th>
                            <th style="text-align:right;">Abono</th>
                            <th style="text-align:right;">Saldo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-if="docs">
                            <t t-foreach="docs" t-as="o">
                                <tr>
                                    <td><span t-esc="o.name"/></td>
                                    <td><span t-esc="o.invoice_date"/></td>
                                    <td><span t-esc="o.invoice_date_due"/></td>
                                    <td style="text-align:right;">
                                        <span t-field="o.amount_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    </td>
                                    <td style="text-align:right;">
                                        <t t-set="abono" t-value="o.amount_total - o.amount_residual"/>
                                        <span t-esc="formatLang(abono, currency_obj=o.currency_id)"/>
                                    </td>
                                    <td style="text-align:right;">
                                        <span t-field="o.amount_residual" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                        <t t-else="">
                            <tr>
                                <td colspan="6">Sin facturas para los criterios seleccionados.</td>
                            </tr>
                        </t>
                    </tbody>
                </table>

            </div>
        </t>
        </t>
    </template>
</odoo>
