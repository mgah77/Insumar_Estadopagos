<odoo>

    <!-- Acción del wizard -->
    <record id="action_informe_clientes_wizard" model="ir.actions.act_window">
        <field name="name">Informe de Clientes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">informe.clientes.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menú bajo Facturación -> Clientes -->
    <menuitem id="menu_informe_clientes_wizard"
              name="Informe de Clientes"
              parent="account.menu_finance_receivables"
              action="action_informe_clientes_wizard"
              sequence="95"/>

    <!-- Vista del wizard -->
    <record id="view_informe_clientes_wizard_form" model="ir.ui.view">
        <field name="name">informe.clientes.wizard.form</field>
        <field name="model">informe.clientes.wizard</field>
        <field name="arch" type="xml">
            <form string="Informe de Clientes">
                <group>
                    <field name="partner_id" options="{'no_create': True}" />
                    <field name="invoice_scope"/>
                    <field name="date_scope"/>
                    <group attrs="{'invisible': [('date_scope','!=','range')]}">
                        <field name="date_from" />
                        <field name="date_to" />
                    </group>
                </group>
                <footer>
                    <button name="action_print_report" type="object" string="Imprimir informe" class="btn-primary"/>
                    <button name="action_cancel" type="object" string="Cancelar" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción de Reporte -->
    <report
        id="action_report_clientes"
        model="account.move"
        string="Informe de Clientes"
        report_type="qweb-pdf"
        name="Insumar_Estadopagos.report_clientes"
        file="Insumar_Estadopagos.report_clientes"
        print_report_name="'Informe_de_Clientes_%s' % (docs and docs[:1].mapped('partner_id.name')[0] or '')"
    />

</odoo>
