<odoo>
    <record id="action_estado_clientes" model="ir.actions.act_window">
        <field name="name">Estado de Clientes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">insumar.estadopagos.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_sucursal': '1'}</field>
    </record>

    <menuitem 
        id="menu_estado_clientes" 
        name="Informe por Cliente" 
        parent="account.menu_finance_receivables"
        action="action_estado_clientes"
        groups="Insumar_Estadopagos.group_addon_estadopago"
        sequence="98"/>
        
    <record id="view_estadopagos_wizard_form" model="ir.ui.view">
        <field name="name">insumar.estadopagos.wizard.form</field>
        <field name="model">insumar.estadopagos.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Reporte de Estado de Pagos">
                <sheet>
                    <group>
                        <group>
                        <field name="partner_id"/>      
                        <field name="tipo_facturas" widget="radio" options="{'horizontal': true}"/>                        
                        <field name="rango_fechas"/>
                        </group>
                        <group attrs="{'invisible': [('rango_fechas', '!=', 'personalizado')]}">
                            <field name="fecha_desde"/>
                            <field name="fecha_hasta"/>
                        </group>
                    </group>
                    <footer>
                        <button name="generar_reporte_cliente" string="Imprimir Informe" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>