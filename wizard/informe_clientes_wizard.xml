<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_insumar_estadopagos_wizard_form" model="ir.ui.view">
        <field name="name">insumar.estadopagos.wizard.form</field>
        <field name="model">insumar.estadopagos.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Informe de Estado de Pagos">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="tipo_reporte"/>
                        <field name="rango_fechas"/>
                        <group attrs="{'invisible': [('rango_fechas', '!=', 'personalizado')]}">
                            <field name="fecha_desde"/>
                            <field name="fecha_hasta"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print_report" string="Imprimir Informe" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_insumar_estadopagos_wizard" model="ir.actions.act_window">
        <field name="name">Generar Informe de Estado de Pagos</field>
        <field name="res_model">insumar.estadopagos.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
    </record>

    <menuitem 
        id="menu_insumar_estadopagos" 
        name="Informe Estado Pagos" 
        parent="account.menu_finance_receivables"
        action="action_insumar_estadopagos_wizard"
        sequence="20"/>
</odoo>