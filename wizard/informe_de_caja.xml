<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard y acción: deja tus records anteriores sin cambios -->

    <!-- Report action: deja tu record report_caja sin cambios -->

    <!-- TEMPLATE DEL REPORTE -->
    <template id="informe_de_caja">
        <!-- Contenedor HTML básico -->
        <t t-call="web.html_container">
            <!-- Estructura requerida por el motor de reportes -->
            <main class="o_report_layout">
                <t t-call="web.external_layout_header"/>
                <div class="o_report_body">
                    <div class="page">
                        <!-- Variables de contexto -->
                        <t t-set="rows" t-value="rows or []"/>
                        <t t-set="fecha" t-value="date"/>
                        <t t-set="seleccion_name" t-value="seleccion_name"/>

                        <h2 style="margin-bottom:8px;">Informe de caja</h2>
                        <div style="margin-bottom:12px;">
                            <span><strong>Fecha:</strong> <t t-esc="fecha"/></span>
                            <span style="margin-left:20px;"><strong>Selección:</strong> <t t-esc="seleccion_name"/></span>
                        </div>

                        <table class="table table-sm o_main_table" style="width:100%; border-collapse:collapse;" border="1">
                            <thead>
                                <tr>
                                    <th>Prefijo</th>
                                    <th>Número</th>
                                    <th>Fecha Factura</th>
                                    <th>Total</th>
                                    <th>Efectivo</th>
                                    <th>Débito / T. Crédito</th>
                                    <th>Transf. / Depósito / NC</th>
                                    <th>Cheque</th>
                                    <th>Crédito</th>
                                    <th>RUT</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="rows" t-as="r">
                                    <td><t t-esc="r.get('sequence_prefix')"/></td>
                                    <td><t t-esc="r.get('sequence_number')"/></td>
                                    <td><t t-esc="r.get('date_invoice')"/></td>

                                    <!-- SIN DECIMALES -->
                                    <td class="text-right"><t t-esc="('%.0f' % (r.get('amount_total') or 0.0))"/></td>
                                    <td class="text-right"><t t-esc="('%.0f' % (r.get('efectivo') or 0.0))"/></td>
                                    <td class="text-right"><t t-esc="('%.0f' % (r.get('debito_tarjeta') or 0.0))"/></td>
                                    <td class="text-right"><t t-esc="('%.0f' % (r.get('transferencia_deposito') or 0.0))"/></td>
                                    <td class="text-right"><t t-esc="('%.0f' % (r.get('cheque') or 0.0))"/></td>
                                    <td class="text-right"><t t-esc="('%.0f' % (r.get('credito') or 0.0))"/></td>

                                    <td><t t-esc="r.get('document_number')"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <t t-call="web.external_layout_footer"/>
            </main>
        </t>
    </template>

</odoo>
