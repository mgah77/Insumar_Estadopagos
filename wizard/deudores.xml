<odoo>
    <record id="action_estado_pagos_wizard" model="ir.actions.act_window">
        <field name="name">Estado de Pagos</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">insumar.estadopagos.deudores.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_sucursal': '1'}</field>
    </record>

    <menuitem 
        id="menu_estado_pagos" 
        name="Informe de pagos adeudados" 
        parent="account.menu_finance_receivables"
        action="action_estado_pagos_wizard"
        groups="Insumar_Estadopagos.group_addon_estadopago"
        sequence="99"/>
        
    <record id="view_estado_pagos_wizard_form" model="ir.ui.view">
        <field name="name">insumar.estadopagos.deudores.wizard.form</field>
        <field name="model">insumar.estadopagos.deudores.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Reporte de Estado de Pagos">
                <sheet>
                    <group>
                        <field name="sucursal" widget="radio" options="{'horizontal': true}"/>
                    </group>
                    <footer>
                        <button name="generar_reporte" string="Imprimir Informe" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>