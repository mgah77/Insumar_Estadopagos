<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="estado_wizard_form" model="ir.ui.view">
            <field name="name">estado.wizard.form</field>
            <field name="model">wizard.estadopago</field>
            <field name="arch" type="xml">
    <form>
        <group>
            <field name="cliente" />
        </group>
        <group>
            <h4>Facturas vencidas</h4>
            <field name="fac_vencido"/>
            <field name="vencido"/>
            <field name="facturas_out" widget="one2many_list">
                <tree string="Facturas Vencidas">
                    <field name="sii_document_number" string="Número de Factura"/>
                    <field name="invoice_date_due" string="Fecha de Vencimiento"/>
                    <field name="amount_residual_signed" string="Monto" digits="0"/>
                </tree>
            </field>
        </group>
        <group>
            <h4>Facturas por vencer</h4>
            <field name="pre_fac_vencido"/>
            <field name="pre_vencido"/>
            <field name="facturas_in" widget="one2many_list">
                <tree string="Facturas por Vencer">
                    <field name="sii_document_number" string="Número de Factura"/>
                    <field name="invoice_date_due" string="Fecha de Vencimiento"/>
                    <field name="amount_residual_signed" string="Monto" digits="0"/>
                </tree>
            </field>
        </group>
        <footer>
            <button string="Imprimir" name="action_print_report" type="object" class="btn-primary"/>
            <button string="Cancelar" class="btn-secondary" special="cancel"/>
        </footer>
    </form>
            
            </field>
        </record>
        <record id="action_estadopago" model="ir.actions.act_window">
            <field name="name">Estados de Pago</field>
            <field name="res_model">wizard.estadopago</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem id="estados_menu"
            parent=""
            action="action_estadopago" />
    </data>
</odoo>