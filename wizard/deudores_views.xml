<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Acción para abrir el wizard -->
    <record id="action_deudores_wizard" model="ir.actions.act_window">
        <field name="name">Estado de Pago por Sucursal</field>
        <field name="res_model">insumar.deudores.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menú: Facturación -> Clientes (account.menu_finance_receivables) -->
    <menuitem id="menu_deudores_wizard"
              name="Estado de pago por sucursal"
              parent="account.menu_finance_receivables"
              action="action_deudores_wizard"
              sequence="95"/>

    <!-- Vista del wizard -->
    <record id="view_deudores_wizard_form" model="ir.ui.view">
        <field name="name">insumar.deudores.wizard.form</field>
        <field name="model">insumar.deudores.wizard</field>
        <field name="arch" type="xml">
            <form string="Estado de Pago por Sucursal">
                <group>
                    <field name="team_selection" required="1"/>
                </group>
                <footer>
                    <button string="Imprimir informe"
                            name="action_print_report"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
