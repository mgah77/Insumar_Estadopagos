<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="deudores">
        <t t-call="web.external_layout">
            <div class="page">
                <h2 style="margin-bottom: 8px;">
                    <t t-esc="'Estado pago sucursal %s' % team_name"/>
                </h2>
                <div t-if="not items">
                    <p>No hay facturas que cumplan los criterios.</p>
                </div>

                <t t-foreach="items" t-as="it">
                    <h4 style="margin-top: 16px; margin-bottom: 6px;">
                        <t t-esc="it['partner_label']"/>
                    </h4>
                    <table class="table table-sm o_main_table" style="width:100%; border-collapse: collapse;">
                        <thead>
                            <tr>
                                <th style="text-align:left; padding:4px;">Factura</th>
                                <th style="text-align:center; padding:4px;">Fecha</th>
                                <th style="text-align:center; padding:4px;">Vence</th>
                                <th style="text-align:right; padding:4px;">Total</th>
                                <th style="text-align:right; padding:4px;">Abono</th>
                                <th style="text-align:right; padding:4px;">Saldo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="it['lines']" t-as="ln">
                                <tr>
                                    <td style="text-align:left; padding:4px;">
                                        <t t-esc="ln['name']"/>
                                    </td>
                                    <td style="text-align:center; padding:4px;">
                                        <span t-esc="ln['invoice_date']"/>
                                    </td>
                                    <td style="text-align:center; padding:4px;">
                                        <span t-esc="ln['invoice_date_due']"/>
                                    </td>
                                    <td style="text-align:right; padding:4px;">
                                        <span t-esc="format_amount(ln['amount_total'], it['partner'].company_id.currency_id)"/>
                                    </td>
                                    <td style="text-align:right; padding:4px;">
                                        <span t-esc="format_amount(ln['abono'], it['partner'].company_id.currency_id)"/>
                                    </td>
                                    <td style="text-align:right; padding:4px;">
                                        <span t-esc="format_amount(ln['amount_residual'], it['partner'].company_id.currency_id)"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
            </div>
        </t>
    </template>

</odoo>
