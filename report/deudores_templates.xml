<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <template id="deudores">
    <t t-call="web.external_layout">
      <main>
        <h2 style="margin-bottom: 8px;">
          Estado pago sucursal <t t-esc="team_name"/>
        </h2>

        <div t-if="not groups">
          <p>No hay registros para los criterios seleccionados.</p>
        </div>

        <t t-foreach="groups" t-as="grp">
          <h4 style="margin-top: 16px; margin-bottom: 6px;">
            <t t-esc="grp['partner_label']"/>
          </h4>
          <table class="table table-sm o_main_table" style="width:100%; border-collapse: collapse;">
            <thead>
              <tr>
                <th style="text-align:left; padding:4px;">Factura</th>
                <th style="text-align:center; padding:4px;">Fecha</th>
                <th style="text-align:center; padding:4px;">Vence</th>
                <th style="text-align:right; padding:4px;">Total</th>
                <th style="text-align:right; padding:4px;">Abono</th>
                <th style="text-align:right; padding:4px;">Saldo</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="grp['lines']" t-as="ln">
                <tr>
                  <td style="text-align:left; padding:4px;"><t t-esc="ln['name']"/></td>
                  <td style="text-align:center; padding:4px;"><t t-esc="ln['invoice_date']"/></td>
                  <td style="text-align:center; padding:4px;"><t t-esc="ln['invoice_date_due']"/></td>
                  <td style="text-align:right; padding:4px;"><t t-esc="format_amount(ln['amount_total'], ln['company_currency'])"/></td>
                  <td style="text-align:right; padding:4px;"><t t-esc="format_amount(ln['abono'], ln['company_currency'])"/></td>
                  <td style="text-align:right; padding:4px;"><t t-esc="format_amount(ln['amount_residual'], ln['company_currency'])"/></td>
                </tr>
              </t>
            </tbody>
          </table>
        </t>
      </main>
    </t>
  </template>

</odoo>
