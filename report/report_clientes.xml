<odoo>
    <template id="report_clientes_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                 <div class="header">
                            <div style="position: absolute; top: 10px; left: 10px; width: 100px; height: auto;">
                                    <img t-att-src="'/web/image/res.company/1/logo'" 
                                        style="width: 200px; height: auto;" 
                                        alt="Company Logo"/>
                                </div> 
                    </div>
                     <div class="page" style="padding-bottom: 250px;">    
                     <div>
                      <h5 style="text-align: center;">Estado pago Cliente: <t t-esc="partner_name"/></h5>
                    <p style="text-align: center; font-style: italic;">Facturas desde el <t t-esc="fecha_desde"/> hasta el <t t-esc="fecha_hasta"/></p>
                     </div>

                    <t t-foreach="clientes" t-as="cliente">
                        <h6 style="margin-top: 20px;">
                            <t t-esc="cliente['document_number']"/> - <t t-esc="cliente['name']"/>
                        </h6>
                        
                        <table class="table table-bordered" style="width: 100%; margin-bottom: 15px;">
                            <thead>
                                <tr style="font-size: 13px;">
                                    <th>Factura</th>
                                    <th>Fecha Emisi√≥n</th>
                                    <th>Fecha Vencimiento</th>
                                    <th></th>
                                    <th>Total</th>
                                    <th>Abono</th>
                                    <th>Saldo Pendiente</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="cliente['facturas']" t-as="factura">
                                    <tr style="font-size: 12px;">
                                        <td><t t-esc="factura['name']"/></td>
                                        <td><t t-esc="factura['invoice_date']"/></td>
                                        <td><t t-esc="factura['invoice_date_due']"/></td>
                                        <td><t t-esc="factura['glosa']"/></td>
                                        <td style="text-align: right;"><t t-esc="'${:,.0f}'.format(factura['amount_total'])"/></td>
                                        <td style="text-align: right;"><t t-esc="'${:,.0f}'.format(factura['abono'])"/></td>
                                        <td style="text-align: right;"><t t-esc="'${:,.0f}'.format(factura['amount_residual'])"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <report 
        id="action_report_clientes"
        string="Reporte de Clientes"
        model="insumar.estadopagos.wizard"
        report_type="qweb-pdf"
        name="Insumar_Estadopagos.report_clientes_template"
        file="Insumar_Estadopagos.report_clientes_template"
        attachment_use="False"/>
</odoo>