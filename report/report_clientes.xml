<odoo>
    <template id="report_clientes_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
            <style>
                .header{ position: relative; z-index: 1; padding-bottom: 0; margin-bottom: 0; background: transparent;}
            </style>
                 <div class="header">
                            <div style="top: 10px; left: 10px; width: 100px; height: auto;">
                                    <img t-att-src="'/web/image/res.company/1/logo'" 
                                        style="width: 200px; height: auto;" 
                                        alt="Company Logo"/>
                                </div> 
                    </div>
                     <div class="page" style="padding-bottom: 250px;" >    
                     <div>
                      <h5 style="text-align: center;">Estado pago Cliente: <t t-esc="partner_name"/></h5>
                    <p style="text-align: center; font-style: italic;">Facturas desde el <t t-esc="fecha_desde"/> hasta el <t t-esc="fecha_hasta"/></p>
                     </div>

                    <t t-foreach="clientes" t-as="cliente">
                        <h6 style="margin-top: 20px;">
                            <t t-esc="cliente['document_number']"/> - <t t-esc="cliente['name']"/>
                        </h6>
                        
                        <table class="table table-bordered" style="width: 100%; margin-bottom: 15px;">
                            <thead>
                                <tr style="font-size: 13px;">
                                    <th>Factura</th>
                                    <th>Fecha Emisi√≥n</th>
                                    <th>Fecha Vencimiento</th>
                                    <th></th>
                                    <th>Total</th>
                                    <th>Abono</th>
                                    <th>Saldo Pendiente</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="cliente['facturas']" t-as="factura">
                                    <tr style="font-size: 12px;">
                                        <td><t t-esc="factura['name']"/></td>
                                        <td><t t-esc="factura['invoice_date']"/></td>
                                        <td><t t-esc="factura['invoice_date_due']"/></td>
                                        <td><t t-esc="factura['glosa']"/></td>
                                        <td style="text-align: right;"><t t-esc="'${:,.0f}'.format(factura['amount_total'])"/></td>
                                        <td style="text-align: right;"><t t-esc="'${:,.0f}'.format(factura['abono'])"/></td>
                                        <td style="text-align: right;"><t t-esc="'${:,.0f}'.format(factura['amount_residual'])"/></td>
                                    </tr>
                                    </t>
                                    <!-- Totales -->
                                    <tr style="font-weight: bold; font-size: 13px; background-color: #f0f0f0;">
                                        <td colspan="4" style="text-align: right;">TOTAL</td>
                                        <td style="text-align: right;">
                                            <t t-esc="'${:,.0f}'.format(sum(f['amount_total'] for f in cliente['facturas']))"/>
                                        </td>
                                        <td style="text-align: right;">
                                            <t t-esc="'${:,.0f}'.format(sum(f['abono'] for f in cliente['facturas']))"/>
                                        </td>
                                        <td style="text-align: right;">
                                            <t t-esc="'${:,.0f}'.format(sum(f['amount_residual'] for f in cliente['facturas']))"/>
                                        </td>
                                    </tr>
                                
                            </tbody>
                        </table>
                        <table class="table table-bordered" style="width: 100%; margin-bottom: 15px;">
                            <tbody>
                                <tr style="font-weight: bold; font-size: 13px; background-color: #e0e0e0;">
                                    <td colspan="4" style="text-align: right;">TOTAL GENERAL</td>
                                    <td style="text-align: right;">
                                        <t t-esc="'${:,.0f}'.format(sum(f['amount_total'] for c in clientes for f in c['facturas']))"/>
                                    </td>
                                    <td style="text-align: right;">
                                        <t t-esc="'${:,.0f}'.format(sum(f['abono'] for c in clientes for f in c['facturas']))"/>
                                    </td>
                                    <td style="text-align: right;">
                                        <t t-esc="'${:,.0f}'.format(sum(f['amount_residual'] for c in clientes for f in c['facturas']))"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="footer" style="position: absolute; bottom: 0; left: 0; width: 100%; text-align: center; height: 0px;">
                            <img t-att-src="'/Insumar_Estadopagos/static/src/img/footer.png'" 
                                 style="width: 100%; height: auto;" 
                                 alt="Footer Image"/>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <report 
        id="action_report_clientes"
        string="Reporte de Clientes"
        model="insumar.estadopagos.wizard"
        report_type="qweb-pdf"
        name="Insumar_Estadopagos.report_clientes_template"
        file="Insumar_Estadopagos.report_clientes_template"
        attachment_use="False"/>
</odoo>