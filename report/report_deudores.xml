<odoo>
    <template id="report_deudores_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <div class="header" >
                     <h5 style="text-align: center;">Estado pago sucursal <t t-esc="sucursal_nombre"/></h5>
                    <p style="text-align: center; font-style: italic;">Facturas con vencimiento hasta: <t t-esc="fecha_corte"/></p>
                </div>
                <div class="page" >                                       
                    <t t-foreach="clientes" t-as="cliente">
                        <h6 style="margin-top: 20px;">
                            <t t-esc="cliente['document_number']"/> - <t t-esc="cliente['name']"/>
                        </h6>
                        
                        <table class="table table-bordered" style="width: 100%; margin-bottom: 15px;">
                            <thead>
                                <tr>
                                    <th>Factura</th>
                                    <th>Fecha Emisi√≥n</th>
                                    <th>Fecha Vencimiento</th>
                                    <th>Total</th>
                                    <th>Abono</th>
                                    <th>Saldo Pendiente</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="cliente['facturas']" t-as="factura">
                                    <tr>
                                        <td><t t-esc="factura['name']"/></td>
                                        <td><t t-esc="factura['invoice_date']"/></td>
                                        <td><t t-esc="factura['invoice_date_due']"/></td>
                                        <td style="text-align: right;"><t t-esc="'${:,.0f}'.format(factura['amount_total']).replace(',', '.')"/></td>
                                        <td style="text-align: right;"><t t-esc="'${:,.0f}'.format(factura['abono']).replace(',', '.')"/></td>
                                        <td style="text-align: right;"><t t-esc="'${:,.0f}'.format(factura['amount_residual']).replace(',', '.')"/></td>
                                    </tr>
                                     <!-- SubTotales -->
                                    <tr style="font-weight: bold; font-size: 13px; background-color: #f0f0f0;">
                                        <td colspan="4" style="text-align: right;">TOTAL</td>
                                        <td style="text-align: right;">
                                            <t t-esc="'${:,.0f}'.format(sum(f['amount_total'] for f in cliente['facturas'])).replace(',', '.')"/>
                                        </td>
                                        <td style="text-align: right;">
                                            <t t-esc="'${:,.0f}'.format(sum(f['abono'] for f in cliente['facturas'])).replace(',', '.')"/>
                                        </td>
                                        <td style="text-align: right;">
                                            <t t-esc="'${:,.0f}'.format(sum(f['amount_residual'] for f in cliente['facturas'])).replace(',', '.')"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                    </t>
                        <table class="table table-bordered" style="width: 100%; margin-bottom: 15px;">
                            <tbody>
                                <tr style="font-weight: bold; font-size: 15px; background-color: #e0e0e0;">
                                    <td></td>
                                    <td></td>
                                    <td style="text-align: right;">TOTAL GENERAL</td>
                                    <td style="text-align: right;">
                                        <t t-esc="'${:,.0f}'.format(sum(f['amount_total'] for c in clientes for f in c['facturas'])).replace(',', '.')"/>
                                    </td>
                                    <td style="text-align: right;">
                                        <t t-esc="'${:,.0f}'.format(sum(f['abono'] for c in clientes for f in c['facturas'])).replace(',', '.')"/>
                                    </td>
                                    <td style="text-align: right;">
                                        <t t-esc="'${:,.0f}'.format(sum(f['amount_residual'] for c in clientes for f in c['facturas'])).replace(',', '.')"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                </div>
            </t>
        </t>
    </template>

    <report 
        id="report_deudores"
        string="Reporte de Deudores"
        model="insumar.estadopagos.deudores.wizard"
        report_type="qweb-pdf"
        name="Insumar_Estadopagos.report_deudores_template"
        file="Insumar_Estadopagos.report_deudores_template"
        attachment_use="False"/>
</odoo>