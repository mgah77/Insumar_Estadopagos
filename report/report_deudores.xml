<odoo>
    <template id="report_deudores_template">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <h2 style="text-align: center;">Estado pago sucursal <t t-esc="sucursal_nombre"/></h2>
                    <p style="text-align: center; font-style: italic;">Fecha: <t t-esc="fecha_actual"/></p>
                    
                    <t t-foreach="clientes" t-as="cliente">
                        <h3 style="margin-top: 20px;">
                            <t t-esc="cliente['document_number']"/> - <t t-esc="cliente['name']"/>
                        </h3>
                        
                        <table class="table table-bordered" style="width: 100%; margin-bottom: 20px;">
                            <thead>
                                <tr>
                                    <th>Factura</th>
                                    <th>Fecha Emisi√≥n</th>
                                    <th>Fecha Vencimiento</th>
                                    <th>Total</th>
                                    <th>Abono</th>
                                    <th>Saldo Pendiente</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="cliente['facturas']" t-as="factura">
                                    <tr>
                                        <td><t t-esc="factura['name']"/></td>
                                        <td><t t-esc="factura['invoice_date']"/></td>
                                        <td><t t-esc="factura['invoice_date_due']"/></td>
                                        <td style="text-align: right;"><t t-esc="'${:,.0f}'.format(factura['amount_total'])"/></td>
                                        <td style="text-align: right;"><t t-esc="'${:,.0f}'.format(factura['abono'])"/></td>
                                        <td style="text-align: right;"><t t-esc="'${:,.0f}'.format(factura['amount_residual'])"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <report 
        id="report_deudores"
        string="Reporte de Deudores"
        model="insumar.estadopagos.deudores.wizard"
        report_type="qweb-pdf"
        name="Insumar_Estadopagos.report_deudores_template"
        file="Insumar_Estadopagos.report_deudores_template"
        attachment_use="False"
        paperformat="a4"/>
</odoo>